PRESIdue 7MG    ! 7-Methyl guanosine ****>>> NOTE: Is charged at pH 7
!        ===      chemistry unclear (CANTOR&SCHIMMEL have charged O)

!DELE ATOM   H1  END! ????
!GROUP
! MODIFY ATOM  C6  TYPE=CN   CHARGE=0.30  END
! MODIFY ATOM  O6  TYPE=ON   CHARGE=-0.40 END
! MODIFY ATOM  N1  TYPE=NC   CHARGE=-0.20 END
 GROUP 
  MODIFY ATOM  C5  TYPE=CB   CHARGE=0.15  END  ! all these charges are
  ADD    ATOM  C7  TYPE=C3   CHARGE=0.15  END  ! guesswork
  MODIFY ATOM  N7  TYPE=NB   CHARGE=-0.15 END ! Type?   
  MODIFY ATOM  C8  TYPE=CE   CHARGE=0.25  END
 !
 ADD BOND  N7    C7
 ADD ANGLE  C5    N7    C7
 ADD ANGLE  C8    N7    C7
 ADD IMPROPER  C7    C5    C8    N7
 ADD IC  C5    C8   *N7   C7    1.378   000.00 -180.00  000.00  0.000
END {7MG}

