PRESIdue DHU       ! Make Dihydro-U out of U
 !       ===
 MODIFY ATOM  C5 TYPE=C2 CHARGE=0.00 END ! Change these two Cs to C2 adds
 MODIFY ATOM  C6 TYPE=C2 CHARGE=0.00 END ! the H's
 !
 DELEte IMPRoper   N1    C2    N3    C4  ! The ring is no longer aromatic
 DELEte IMPRoper   C2    N3    C4    C5
 DELEte IMPRoper   N3    C4    C5    C6
 DELEte IMPRoper   C4    C5    C6    N1
 DELEte IMPRoper   C5    C6    N1    C2
 DELEte IMPRoper   C6    N1    C2    N3
 ADD DIHEdral   N1    C2    N3    C4       ! So we use plain dihedrals instead 
 ADD DIHEdral   C2    N3    C4    C5
 ADD DIHEdral   N3    C4    C5    C6
 ADD DIHEdral   C4    C5    C6    N1
 ADD DIHEdral   C5    C6    N1    C2
 ADD DIHEdral   C6    N1    C2    N3
END {DHU}

