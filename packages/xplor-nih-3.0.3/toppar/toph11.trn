PRESidue 2'OM          ! 2'O-Methyl, to be applied to any nucleotide     
 !       ====
  DELEte ATOM H2'  END
 GROUP
  MODIFY ATOM C2'  TYPE=CH   CHARGE=0.15    END
  MODIFY ATOM O2'  TYPE=OS   CHARGE=-0.30   END
  ADD    ATOM C2A  TYPE=C3   CHARGE=0.15    END
 !
 ADD BOND O2'  C2A
 ADD ANGLE C2'  O2'  C2A
 ADD DIHEdral C3'  C2'  O2'  C2A
 ADD IC C2A  O2'  C2'  C3'    1.45    114.97  148.63  11.92  1.5284
END {2'OM}

