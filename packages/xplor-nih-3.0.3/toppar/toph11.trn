PRESidue PSI      ! Pseudouridine; U with ribose at C5, not N1
 !       ===
 DELEte BOND C1'  N1
 DELEte ANGLe O4'  C1'  N1
 DELEte ANGLe N1   C1'  C2'
 DELEte ANGLe C1'  N1   C2
 DELEte ANGLe C1'  N1   C6
 DELEte DIHEdral O4'  C1'  N1   C2
 DELEte DIHEdral N1   C2'  O4'  C1'
 DELEte IMPRoper C1'  C2   C6   N1
 DELEte IC   C1'  C2   *N1  C6
 DELEte IC   C3'  C2'  C1'  N1
  !
  MODIFY  ATOM C5   TYPE=CS CHARGE=0.00  END ! Just make this another kind of C
 GROUP
  MODIFY ATOM C6   TYPE=CF CHARGE=0.20  END
  MODIFY ATOM N1   TYPE=NA CHARGE=-0.30 END
  ADD    ATOM H11  TYPE=HN CHARGE=0.10  END
 !
 ADD BOND C1'  C5
 ADD BOND N1   H11 
 ADD ANGLE O4'  C1'  C5
 ADD ANGLE C5  C1'  C2'
 ADD ANGLE C1'  C5   C4        
 ADD ANGLE C1'  C5   C6
 ADD ANGLE C2  N1   H11
 ADD ANGLE C6   N1   H11
 ADD DIHEral O4'  C1'  C5   C6
 ADD IMPRoper C5   C2'  O4'  C1'
 ADD IMPRoper C1'  C6   C4   C5
 ADD IMPRoper H11  C2   C6   N1
 !
 ADD IC C4   C5   C6   N1    0.0000  000.00  000.00  000.00  0.000
 ADD IC C3'  C2'  C1'  C5    1.5284  101.97  144.39  113.71  1.500
 ADD IC C2'  C1'  C5   C6    1.5215  113.71  144.99  121.63  1.36
 ADD IC C1'  C6   *C5  C4    1.5000  121.60  180.00  121.60  1.44
 ADD IC H11  C2   *N1  C6    1.0900  117.06  180.00  122.08  1.37
 ! 
END {PSI}

