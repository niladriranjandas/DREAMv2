PRESIdue 2M2G      ! N2-Dimethyl guanosine       
 !       ====
 DELEte ATOM   H21  END
 DELEte ATOM   H22  END
 !
 GROUP
  ATOM  N2  TYPE=N2   CHARGE=-0.42    END
  ATOM  C2B TYPE=C3   CHARGE=0.21     END ! Just replace the Hs with methyls
  ATOM  C2A TYPE=C3   CHARGE=0.21     END
 !
 ADD BOND  N2    C2B
 ADD BOND  N2    C2A
 ADD ANGLE  C2    N2    C2B
 ADD ANGLE  C2    N2    C2A
 ADD ANGLE  C2B   N2    C2A  
 ADD DIHEdral  N3    C2    N2    C2B
 ADD IMPRoper  C2A   C2B   C2    N2
 ADD IC  N3    C2    N2    C2B    1.3310  120.68  179.25  127.00  0.00  
 ADD IC  C2B   C2   *N2   C2A    0.00    127.00 -178.12  116.53  0.00
END {2M2G}

!--------------------------------------------------------------

PRESidue M2G          ! N2-Methyl guanosine       
 !       ===
  DELEte ATOM  H22  END
 GROUP
  MODIFY ATOM  N2  TYPE=N2  CHARGE=-0.42  END
  MODIFY ATOM  H21 TYPE=H2  CHARGE=0.21   END
  ADD    ATOM  C2A TYPE=C3  CHARGE=0.21   END !Just replace the H with a methyl
 !
 ADD BOND  N2    C2A
 ADD ANGLE  C2    N2    C2A
 ADD ANGLE  H21   N2    C2A  
 ADD IMPROPER  C2A   H21   C2    N2
 ADD IC  H21   C2   *N2   C2A    0.00    127.00 -178.12  116.53  0.00
END {M2G}

