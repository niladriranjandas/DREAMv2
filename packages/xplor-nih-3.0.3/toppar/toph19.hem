  ATOM CBA  TYPE=CH2E  CHARGE=-0.10   END
  ATOM CGA  TYPE=C     CHARGE=0.30    END
  ATOM O1A  TYPE=OC    CHARGE=-0.50   END
  ATOM O2A  TYPE=OC    CHARGE=-0.50   END
