  ATOM CAD  TYPE=CH2E  CHARGE=0.04    END
 GROUp
  ATOM CBD  TYPE=CH2E  CHARGE=-0.10   END
  ATOM CGD  TYPE=C     CHARGE=0.30    END
  ATOM O1D  TYPE=OC    CHARGE=-0.50   END
  ATOM O2D  TYPE=OC    CHARGE=-0.50   END

 BOND FE   NA        BOND FE   NB        BOND FE   NC        BOND FE   ND
